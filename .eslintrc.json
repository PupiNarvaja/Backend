{
    "extends": ["airbnb", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "ignorePatterns": ["client/*"],
    "rules": {
        "prettier/prettier": ["error", { "semi": false }],
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-name": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off"
    }
}